{
  "manifest_version": 2,
  "name": "Youtube Multi captions",
  "description": "Show several language captions on Youtube at the same time",
  "version": "0.95",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "js": ["wrapper.js"],
      "css": ["style.css"],
      "run_at": "document_start",
      "matches": [
          "https://*.youtube.com/*",
          "https://www.youtube-nocookie.com/embed/*"
      ],
      "all_frames": true
    }
  ],
  "optional_permissions": [
    "declarativeContent",
    "webNavigation"
  ],
  "permissions": [
    "https://*.youtube.com/*"
  ]
}
